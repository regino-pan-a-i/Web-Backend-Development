<!-- Content Heading -->
<% if (title) { %>
    <h1><%- title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Register Form -->
<div id = "form">
    <h2>All Fields are required</h2>
    <form action = "/account/register" method = "post">
    <label for = "account_firstname">First Name: </label>
    <input type = "text" class  = "account_firstname" id = "account_firstname" name = "account_firstname" placeholder = "John" value="<%= locals.account_firstname %>"required>
    <label for = "account_lastname">Last Name: </label>
    <input type = "text" class  = "account_lastname" id = "account_lastname" name = "account_lastname" placeholder = "Doe"  value="<%= locals.account_lastname %>"required>
    <label for = "account_email">Email Address: </label>
    <input type = "email" class  = "account_email" id = "account_email" name = "account_email" placeholder = "example@email.com" value="<%= locals.account_email %>" required>
    <label for = "password">Password: </label>
    <input type = "password" class = "account_password" id = "account_password" name = "account_password" placeholder = "******" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{12,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 12 or more characters">
    <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p> 

    <span id="pwordBtn">Show Password</span>
    <input type = "submit" value = "Register" >
    </form>
</div>

<script src="/js/script.js" defer></script>