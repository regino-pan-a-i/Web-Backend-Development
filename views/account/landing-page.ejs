<!-- Content Heading -->
<% if (title) { %>
    <h1><%- title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %> 


<h2>Welecome <%- locals.accountData.account_firstname %> </h2>

<div id="invManagementContent"> 
  <div>
    <h3>Update account information</h3>
    <a title="Go to account information page" href="/account/profile">Click here</a>
  </div>
  <%if (locals.accountData.account_type == 'Employee' || locals.accountData.account_type == 'Admin') { %> 
    <div>
      <h3>Manage Inventory</h3>
      <a title = "Go to the inventory management page" href="/inv/">Click here</a> 
    </div>
    <% } %>

  <%if (locals.accountData.account_type == 'Admin') { %> 
    <div>
      <h3>Pending Approval</h3>
      <a title = "Go to the Pending Approval page" href="/inv/pending">Click here</a> 
    </div>
  <% } %>
</div>